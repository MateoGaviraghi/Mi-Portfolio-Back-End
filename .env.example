# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# JWT - IMPORTANTE: Cambia estos secrets en producción
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Server
PORT=3001
NODE_ENV=development

# CORS - URLs permitidas separadas por coma
# En desarrollo: localhost del frontend
# En producción: agregar tu dominio de Vercel (ej: https://mi-portfolio.vercel.app)
FRONTEND_URLS=http://localhost:3000,http://localhost:3017

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# AI (Opcional)
# OPENAI_API_KEY=sk-...
